{
  "name": "react-js-monorepo",
  "version": "0.0.0",
  "description": "A React JS starter code",
  "type": "module",
  "private": true,
  "author": "Arpit Malik",
  "license": "MIT",
  "engines": {
    "node": ">=20.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arpitmalik832/react-js-monorepo"
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('pnpm') === -1) throw new Error('You must use pnpm to install dependencies')\"",
    "rm-node_modules": "rimraf node_modules --glob",
    "rm-pnpm-lock": "rimraf pnpm-lock.yaml",
    "clean": "lerna clean -y && pnpm rm-pnpm-lock && pnpm rm-node_modules",
    "serve": "lerna run serve --concurrency 1",
    "start": "lerna run start --concurrency 1",
    "build": "lerna run build --concurrency 1",
    "build:beta": "lerna run build:beta --concurrency 1",
    "build:prod": "lerna run build:prod --concurrency 1",
    "lint": "lerna run lint --concurrency 1",
    "lint:ci": "lerna run lint:ci --concurrency 1",
    "lint:fix": "lerna run lint:fix --concurrency 1",
    "lint-staged": "lerna run lint-staged --concurrency 1",
    "grant-permissions:husky": "chmod +x .husky/* && chmod +x git-hooks",
    "prepare": "husky && pnpm grant-permissions:husky",
    "commit": "git-cz",
    "test": "lerna run test --concurrency 1",
    "test:watch": "lerna run test:watch --concurrency 1",
    "test:ss-update": "lerna run test:ss-update --concurrency 1",
    "test:coverage": "lerna run test:coverage --concurrency 1",
    "test:clearCache": "lerna run test:clearCache --concurrency 1",
    "test:watch:quick": "lerna run test:watch:quick --concurrency 1",
    "test:watch:inBand": "lerna run test:watch:inBand --concurrency 1",
    "test:coverage:silent": "lerna run test:coverage:silent --concurrency 1",
    "test:coverage:quick": "lerna run test:coverage:quick --concurrency 1",
    "test:coverage:inBand": "lerna run test:coverage:inBand --concurrency 1",
    "test:coverage:silent:quick": "lerna run test:coverage:silent:quick --concurrency 1",
    "test:coverage:silent:inBand": "lerna run test:coverage:silent:inBand --concurrency 1",
    "e2e-open": "lerna run e2e-open --concurrency 1",
    "e2e-run": "lerna run e2e-run --concurrency 1",
    "e2e-open-all": "lerna run e2e-open-all --concurrency 1",
    "e2e-run-all": "lerna run e2e-run-all --concurrency 1",
    "e2e-run:pre-commit": "lerna run e2e-run:pre-commit --concurrency 1",
    "knip": "lerna run knip --concurrency 1",
    "knip:debug": "lerna run knip:debug --concurrency 1",
    "knip:check-files": "lerna run knip:check-files --concurrency 1",
    "knip:w/o-devDependencies": "lerna run knip:w/o-devDependencies --concurrency 1",
    "knip:prod": "lerna run knip:prod --concurrency 1",
    "knip:prod:check-files": "lerna run knip:prod:check-files --concurrency 1",
    "storybook": "lerna run storybook --concurrency 1",
    "storybook:build": "lerna run storybook:build --concurrency 1",
    "storybook:build:beta": "lerna run storybook:build:beta --concurrency 1",
    "storybook:build:prod": "lerna run storybook:build:prod --concurrency 1",
    "storybook:serve": "lerna run storybook:serve --concurrency 1",
    "version-bump:patch:release": "pnpm exec lerna version patch --conventional-commits --yes",
    "version-bump:minor:release": "pnpm exec lerna version minor --conventional-commits --yes",
    "version-bump:major:release": "pnpm exec lerna version major --conventional-commits --yes",
    "version-bump:patch:alpha": "pnpm exec lerna version prerelease --conventional-commits --preid alpha --yes",
    "version-bump:minor:alpha": "pnpm exec lerna version preminor --conventional-commits --preid alpha --yes",
    "version-bump:major:alpha": "pnpm exec lerna version premajor --conventional-commits --preid alpha --yes",
    "version-bump:patch:beta": "pnpm exec lerna version prerelease --conventional-commits --preid beta --yes",
    "version-bump:minor:beta": "pnpm exec lerna version preminor --conventional-commits --preid beta --yes",
    "version-bump:major:beta": "pnpm exec lerna version premajor --conventional-commits --preid beta --yes",
    "version-bump:patch:rc": "pnpm exec lerna version prerelease --conventional-commits --preid rc --yes",
    "version-bump:minor:rc": "pnpm exec lerna version preminor --conventional-commits --preid rc --yes",
    "version-bump:major:rc": "pnpm exec lerna version premajor --conventional-commits --preid rc --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "lerna": "^8.1.9",
    "rimraf": "^6.0.1",
    "validate-branch-name": "^1.3.2"
  },
  "packageManager": "pnpm@10.0.0-beta.1"
}
