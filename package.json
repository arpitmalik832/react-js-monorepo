{
  "name": "react-js-rollup-library",
  "version": "0.0.0",
  "description": "A React JS starter code",
  "type": "module",
  "private": true,
  "author": "Arpit Malik",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean -y",
    "start": "lerna run start --stream",
    "build": "lerna run build --stream --no-bail",
    "storybook": "lerna run storybook --stream",
    "storybook:build": "lerna run storybook:build --stream",
    "lint-js": "lerna run lint-js --stream",
    "lint-css": "lerna run lint-css --stream",
    "prettier": "lerna run prettier --stream",
    "lint": "lerna run lint --stream",
    "lint-js:fix": "lerna run lint-js:fix --stream",
    "lint-css:fix": "lerna run lint-css:fix --stream",
    "prettier:fix": "lerna run prettier:fix --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "test": "lerna run test --stream",
    "test:watch": "lerna run test:watch --stream",
    "test:ss-update": "lerna run test:ss-update --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "test:coverage:pre-commit": "lerna run test:coverage:pre-commit --stream",
    "test:watch:quick": "lerna run test:watch:quick --stream",
    "test:coverage:quick": "lerna run test:coverage:quick --stream",
    "test:coverage:pre-commit:quick": "lerna run test:coverage:pre-commit:quick --stream",
    "test:clearCache": "lerna run test:clearCache --stream",
    "knip": "lerna run knip --stream",
    "knip:debug": "lerna run knip:debug --stream",
    "knip:check-files": "lerna run knip:check-files --stream",
    "knip:w/o-devDependencies": "lerna run knip:w/o-devDependencies --stream",
    "knip-prod": "lerna run knip-prod --stream",
    "knip-prod:check-files": "lerna run knip-prod:check-files --stream",
    "knip:pre-commit": "lerna run knip:pre-commit --stream",
    "lint-staged": "lerna run lint-staged --concurrency 1",
    "grant-permissions:husky": "chmod +x .husky/*",
    "prepare": "husky install && yarn grant-permissions:husky",
    "commit": "git-cz",
    "version:bump": "lerna version --yes --no-push --no-git-tag-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.4.0",
    "commitizen": "^4.3.0",
    "husky": "^9.1.5",
    "lerna": "^8.1.8",
    "rimraf": "^6.0.1",
    "validate-branch-name": "^1.3.1"
  }
}
